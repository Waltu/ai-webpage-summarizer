{
  "name": "ai-webpage-summarizer",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "analyze": "npm run lint;npm run test;npm run dependency-check;npm run audit",
    "audit": "better-npm-audit audit",
    "update:packages": "ncu -u && npm install && npm audit fix",
    "lint": "eslint && tsc --noEmit --skipLibCheck",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "dependency:graph": "depcruise --include-only \"^src\" --output-type dot src | dot -T svg > dependencygraph.svg",
    "dependency-check": "depcheck --ignores=\"ts-node,src,@types/node,io-ts,fp-ts,io-ts-types,*lib,@trivago/prettier-plugin-sort-imports,eslint-plugin-node\",dependency-cruiser,io-ts-reporters,npm-check-updates"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/jsdom": "^21.1.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "better-npm-audit": "^3.7.3",
    "depcheck": "^1.4.3",
    "dependency-cruiser": "^12.6.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsonc": "^2.3.1",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.8.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-sonarjs": "^0.14.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "eslint-plugin-yml": "^1.1.0",
    "npm-check-updates": "^16.0.5",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@mozilla/readability": "^0.4.2",
    "ajv": "^8.12.0",
    "chalk": "^5.2.0",
    "env-schema": "^5.2.0",
    "gpt-3-encoder": "^1.1.4",
    "jsdom": "^21.1.1",
    "openai": "^3.2.1",
    "pino": "^8.11.0",
    "string-strip-html": "^8.4.0"
  }
}